@model IEnumerable<Magic_Capstone.Models.DeckViewModels.CardDeckViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Save Cards To Your Deck</h1>

<link rel="stylesheet" href="~/css/TaskCardStyle.css">


<div class="form-group">
    <label asp-for="" class="control-label"></label>
    <select asp-for="Book.AuthorId" class="form-control" asp-items="@Model.DeckOptions"></select>
</div>

    @foreach (var item in Model)
    {
        <input type="image" src=@item.CardData.imageUrl id="magic" />
    }