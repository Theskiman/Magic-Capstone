@model Magic_Capstone.Models.Deck

@{
    ViewData["Title"] = "Details";
}
    <link rel="stylesheet" href="~/css/TaskCardStyle.css">
    <h4>To delete a card from your deck just click on the card you wish to delete</h4>

<div>
    <h1>@Model.DeckName Details</h1>
    <hr />
    <h2>@Model.Description</h2>
    <div class="cardflex">
       @foreach(var item in Model.cardDecks)
       {
           <form asp-action="Delete" asp-controller="CardDecks">

          <button type="submit" name="CardDeckId" value="@item.CardDeckId"><img src="@item.CardData.imageUrl" id="magic"/></button>
               </form> 
       }
        </div>
    
</div>
<div>
   
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
</div>
